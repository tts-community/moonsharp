{
    "name": "moonsharp-debug",
    "displayName": "MoonSharp Debug",
    "version": "1.8.2",
    "publisher": "xanathar",
    "description": "VS Code Debugger for applications embedding MoonSharp.",
    "author": {
        "name": "Marco Mastropaolo",
        "email": "marco@mastropaolo.com"
    },
    "engines": {
        "node": "^11.0.0",
        "vscode": "^1.30.0"
    },
    "icon": "images/icon.png",
    "categories": [
        "Debuggers"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/xanathar/moonsharp.git"
    },
    "bugs": {
        "url": "https://github.com/xanathar/moonsharp/issues"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.19",
        "mocha": "^5.2.0",
        "typescript": "^3.2.4",
        "vscode": "^1.1.28",
        "vscode-debugadapter-testsupport": "^1.13.0"
    },
    "scripts": {
        "prepublish": "node ./node_modules/typescript/bin/tsc -p .",
        "compile": "node ./node_modules/typescript/bin/tsc -p .",
        "watch": "node ./node_modules/typescript/bin/tsc -w -p .",
        "test": "node ./node_modules/mocha/bin/mocha -u tdd ./out/tests/",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onCommand:extension.getProgramName",
        "onDebug",
        "onDebugInitialConfigurations",
        "onDebugResolve:lua"
    ],
    "contributes": {
        "breakpoints": [
            {
                "language": "lua"
            }
        ],
        "debuggers": [
            {
                "type": "moonsharp-lua",
                "label": "MoonSharp",
                "debugServer": 41912,
                "languages": ["lua"],
                "configurationAttributes": {
                    "attach": {
                        "required": [],
                        "properties": {
                            "path": {
                                "type": "string",
                                "description": "File or directory path.",
                                "default": ""
                            }
                        }
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "lua",
                "extensions": [
                    ".lua",
                    ".ttslua"
                ],
                "aliases": [
                    "Lua"
                ]
            }
        ]
    }
}